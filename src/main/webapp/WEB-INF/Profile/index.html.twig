{% extends "../main.html.twig" %}



{% block body %}
    Zmień swoje dane:<br>
    
    
    {% if profileErrors is defined %}
        <ul>
            {% for error in profileErrors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    
    {% if profileMessage is defined %}
        <div class="message">{{- profileMessage -}}</div>
    {% endif %}
    
    <form method="post" action="profile">
        Imie: <input type="text" name="firstname" value="{{- user.firstname -}}"><br>
        Nazwisko: <input type="text" name="surname" value="{{- user.surname -}}"><br>
        Login: <input disabled type="text" name="username" value="{{- user.username -}}"><br>
        E-mail: <input disabled type="text" name="email" value="{{- user.email -}}"><br>
        <input type="submit" name="userDataSubmit" value="Zmień dane użytkownika">
    </form>
        
        <br><br><br>
        
        
    <form method="post" action="profile">
        Obecne hasło<input type="password" name="pass" value=""><br>
        Nowe Hasło: <input type="password" name="newpass" value=""><br>
        Powtórz hasło: <input type="password" name="newpass2" value=""><br>
        
        <input type="submit" name="passwordSubmit" value="Zmień hasło">
    </form>
{% endblock %}